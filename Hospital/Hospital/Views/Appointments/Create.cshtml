@model Appointment
<h1>Create Appointmemt Page</h1>

<form asp-action="Create" method="post" class="form-horizontal">

    <div class="form-group">
        <label asp-for="PatientName">Patient's Name</label>
        <div>
            <input asp-for="PatientName" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DoctorName">Doctor's Name</label>
        <div>
            <input asp-for="DoctorName" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Speciality">Speciality</label>
        <div>
            <input asp-for="Speciality" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Date">Date</label>
        <div>
            <input asp-for="Date" type="date" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Time">Time</label>
        <div>
            <input asp-for="Time" type="time" />
        </div>
    </div>

    <div>
        <input type="submit" class="btn btn-primary" />
    </div>
</form>

