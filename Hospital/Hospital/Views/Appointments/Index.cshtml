@model IEnumerable<Hospital.Models.Appointment>
@{
    ViewBag.Title = "Appointments";
    var Appointment = (Appointment)ViewBag.Appointment;
 }
    <h2>Today's Appointments</h2>
    <div class="main-content">
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Patient's Name</th>
                <th>Doctor's Name</th>
                <th>Speciality</th>
                <th>Date</th>
                <th>Time</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            
            @foreach (var item in Model)
            {
                var d = item.Date.Value.ToShortDateString();
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PatientName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.DoctorName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Speciality)
                    </td>
                    <td>
                        @Html.DisplayFor(m => d)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Time)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Appointments" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <form method="post" asp-controller="Appointments" asp-action="Delete" asp-route-id="@item.Id">
                            <input type="submit" value="Delete" class="btn btn-outline-danger" />
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>